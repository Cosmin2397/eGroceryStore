@using Microsoft.AspNetCore.Identity
@using eGroceryStore.Areas.Data
@model IEnumerable<Category>

@{ 
    ViewData["Title"] = "Categories list";
}
<!-- Button to add a new category -->
<div style="position:center; right: 25px; bottom: 25px;" class="text-white">
            <a class="btn btn-success text-white" asp-action="Create"> <i class="bi bi-cart-plus"></i> Add new category</a>
</div>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Shop Categories List</h2>
        </div>
        <!-- Bootstrap table with categories list -->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- Iterate through each item in the Model -->
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">@item.Id</td>
                    <td class="align-middle">@item.Name</td>
                    <!-- Buttons to  edit or delete vategory-->
                    <td class="align-middle">
                       <a class="btn btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>