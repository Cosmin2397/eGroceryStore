@model eGroceryStore.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-8 offset-2">
            <h4 style="text-align:center">Create category</h4>

        <div class="row">
            <div class="col-md-8 offset-2">
        <!-- Form for creating a category -->
        <form asp-action="Create">
            <!-- Validation summary for model errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="font-size:20px"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px;">
                        <input type="submit" value="Create" class="btn btn-primary btn-lg"  />
                        <a class="btn btn-secondary btn-lg" asp-action="Index">Show all</a>
             </div>
  </form>
 
  </div>
  </div>
  </div>
  </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
