@model eGroceryStore.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 offset-2">
            <h4 style="text-align:center">Edit category</h4>

        <div class="row">
            <div class="col-md-8 offset-2">
        <!-- Form for updating a category-->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="font-size:20px"></label>
                <input asp-for="Name" class="form-control form-control-lg" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <!-- Buttons for updating and navigating -->
            <div class="form-group" style="margin-top:10px;">
                        <input type="submit" value="Update" class="btn btn-primary btn-lg"  />
                        <a class="btn btn-secondary btn-lg" asp-action="Index">Show all</a>
             </div>
        </form>
 
                </div>
            </div>
        </div>
      </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
