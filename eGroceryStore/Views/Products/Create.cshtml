@model eGroceryStore.Models.Product

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-8 offset-2">
            <h4 style="text-align:center">Create product</h4>

        <div class="row">
            <div class="col-md-8 offset-2"> 
  <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-4 offset-4 text-center">
          <img width="100%" id="ImageUrlPreview" />
    </div>
    <fieldset>
      <label asp-for="ProductPictureUrl" class="control-label">Product Picture URL</label>
      <input asp-for="ProductPictureUrl" class="form-control" />
      <span asp-validation-for="ProductPictureUrl" class="text-danger"></span>
    </fieldset>
    <fieldset>
       <label asp-for="Name" class="control-label"></label>
       <input asp-for="Name" class="form-control" />
       <span asp-validation-for="Name" class="text-danger"></span>
    </fieldset>
    <fieldset>
      <label asp-for="Price" class="control-label"></label>
      <input asp-for="Price" class="form-control" />
      <span asp-validation-for="Price" class="text-danger"></span>
    </fieldset>
    <fieldset>
      <label asp-for="ProductStock" class="control-label">Stock</label>
      <input asp-for="ProductStock" class="form-control" />
      <span asp-validation-for="ProductStock" class="text-danger"></span>
    </fieldset>
    <fieldset>
      <label asp-for="Description" class="control-label"></label>
      <input asp-for="Description" class="form-control" />
      <span asp-validation-for="Description" class="text-danger"></span>
    </fieldset>
    <fieldset>
      <label asp-for="Ingredients" class="control-label"></label>
      <input asp-for="Ingredients" class="form-control" />
      <span asp-validation-for="Ingredients" class="text-danger"></span>
    </fieldset>
    <fieldset>
      <label asp-for="BrandId" class="control-label">Brand</label>
      <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
    </fieldset>
    <fieldset>
      <label asp-for="CategoryId" class="control-label">Category</label>
      <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
    </fieldset>
    <div class="form-group" style="margin-top:10px;">
                        <input type="submit" value="Create" class="btn btn-primary"  />
                        <a class="btn btn-secondary" asp-action="Index">Show all</a>
     </div>
  </form>
 
  </div>
  </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ProductPictureUrl").val();
        });
        $("#ProductPictureUrl").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}